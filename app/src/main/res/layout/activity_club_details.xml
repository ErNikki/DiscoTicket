<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClubDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/clubDetailClubImage"
                    android:layout_width="411dp"
                    android:layout_height="209dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/clubDetailsClubName"
                    android:layout_width="200dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailClubImage" />

                <TextView
                    android:id="@+id/clubDetailsAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:text="TextView"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/clubDeatilsAddToFavouritiesText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsClubName" />

                <RatingBar
                    android:id="@+id/clubDeatilsRatingBar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
                    android:layout_width="174dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsAddress" />

                <TextView
                    android:id="@+id/clubDetailsTotalReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="84dp"
                    android:layout_marginBottom="4dp"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/clubDeatilsRatingBar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.238"
                    app:layout_constraintStart_toEndOf="@+id/clubDeatilsRatingBar"
                    app:layout_constraintTop_toTopOf="@+id/clubDeatilsRatingBar"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageButton
                    android:id="@+id/clubDetailsFavouritesButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.755"
                    app:layout_constraintStart_toEndOf="@+id/clubDetailsClubName"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailClubImage"
                    app:srcCompat="@drawable/ic_baseline_favorite_24" />

                <TextView
                    android:id="@+id/clubDeatilsAddToFavouritiesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Aggiungi ai preferiti"
                    app:layout_constraintEnd_toEndOf="@+id/clubDetailsFavouritesButton"
                    app:layout_constraintHorizontal_bias="0.458"
                    app:layout_constraintStart_toStartOf="@+id/clubDetailsFavouritesButton"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsFavouritesButton" />

                <Button
                    android:id="@+id/clubDetailsDrinkMenuButton"
                    android:layout_width="142dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Apri drink menu"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.954"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDeatilsClubDescription" />

                <Button
                    android:id="@+id/clubDetailsBuyTicketsButton"
                    android:layout_width="117dp"
                    android:layout_height="48dp"
                    android:text="Compra Biglietti"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.943"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsDrinkMenuButton" />

                <TextView
                    android:id="@+id/clubDetailsReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:text="Recensioni"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsBuyTicketsButton" />


                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/clubDetailsFragmentContainerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsReview" />


                <TextView
                    android:id="@+id/clubDeatilsReviwerNoReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Non ci sono recensioni per questa discoteca"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsFragmentContainerView" />

                <TextView
                    android:id="@+id/clubDeatilsClubDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="TextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDeatilsRatingBar" />

                <Button
                    android:id="@+id/clubDetailsWriteReviewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Scrivi una recensione"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDeatilsReviwerNoReview" />

                <Button
                    android:id="@+id/clubDetailsReadReviewsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Leggi le recensioni"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@+id/clubDetailsWriteReviewButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/clubDetailsWriteReviewButton" />

                <LinearLayout
                    android:id="@+id/clubDetailsTagLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/clubDetailsDrinkMenuButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsPrice"></LinearLayout>

                <TextView
                    android:id="@+id/clubDetailsDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/clubDeatilsClubDescription"
                    app:layout_constraintTop_toBottomOf="@+id/clubDeatilsClubDescription" />

                <TextView
                    android:id="@+id/clubDetailsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="@+id/clubDetailsTagLayout"
                    app:layout_constraintTop_toBottomOf="@+id/clubDetailsDistance" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>